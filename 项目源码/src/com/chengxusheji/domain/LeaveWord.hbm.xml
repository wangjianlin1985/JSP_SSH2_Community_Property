<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="LeaveWord" table="t_LeaveWord">

          <!-- 主键记录id -->
          <id name="leaveWordId" column="leaveWordId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 标题 -->
          <property
            name="title"
            column="title"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 内容 -->
          <property
            name="content"
            column="content"
            type="string"
            length="500"
          />

          <!-- 简单字符串属性: 发布时间 -->
          <property
            name="addTime"
            column="addTime"
            type="string"
            length="20"
          />

          <!-- 多对一属性: 提交住户 -->
          <many-to-one name="ownerObj"
            column="ownerObj"
            class="Owner"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 回复内容 -->
          <property
            name="replyContent"
            column="replyContent"
            type="string"
            length="500"
          />

          <!-- 简单字符串属性: 回复时间 -->
          <property
            name="replyTime"
            column="replyTime"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 回复人 -->
          <property
            name="opUser"
            column="opUser"
            type="string"
            length="20"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
