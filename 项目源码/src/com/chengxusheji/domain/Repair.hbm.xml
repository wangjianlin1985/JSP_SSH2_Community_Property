<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Repair" table="t_Repair">

          <!-- 主键报修id -->
          <id name="repairId" column="repairId">
            <generator class="native"/>
          </id>

          <!-- 多对一属性: 报修用户 -->
          <many-to-one name="ownerObj"
            column="ownerObj"
            class="Owner"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单日期型属性: 报修日期 -->
          <property
            name="repairDate"
            column="repairDate"
            	type="string"
            	length="20"
          />

          <!-- 简单字符串属性: 问题描述 -->
          <property
            name="questionDesc"
            column="questionDesc"
            type="string"
            length="500"
          />

          <!-- 简单字符串属性: 报修状态 -->
          <property
            name="repairState"
            column="repairState"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 处理结果 -->
          <property
            name="handleResult"
            column="handleResult"
            type="string"
            length="500"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
