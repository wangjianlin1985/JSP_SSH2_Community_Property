<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Employee" table="t_Employee">

          <!-- 主键员工编号 -->
          <id name="employeeNo" type="string" length="20">
            <generator class="assigned"/>
          </id>

          <!-- 简单字符串属性: 姓名 -->
          <property
            name="name"
            column="name"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 性别 -->
          <property
            name="sex"
            column="sex"
            type="string"
            length="4"
          />

          <!-- 简单字符串属性: 职位 -->
          <property
            name="positionName"
            column="positionName"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 地址 -->
          <property
            name="address"
            column="address"
            type="string"
            length="60"
          />

          <!-- 简单字符串属性: 员工介绍 -->
          <property
            name="employeeDesc"
            column="employeeDesc"
            type="string"
            length="200"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
